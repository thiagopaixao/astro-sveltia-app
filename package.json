{
  "name": "app-git-electron",
  "version": "1.0.0",
  "description": "Ambiente de documentação centralizado com integração Git",
  "main": "main.js",
  "homepage": "https://github.com/documental/app-git-electron",
  "scripts": {
    "start": "electron .",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:linux:deb": "electron-builder --linux deb",
    "build:linux:dir": "electron-builder --linux dir",
    "build:linux:snap": "electron-builder --linux snap",
    "build:linux:appimage": "electron-builder --linux AppImage",
    "build:win": "electron-builder --win portable",
    "dist": "npm run build && node scripts/post-build.js",
    "build:fixed": "npm run build:linux:appimage && node project/scripts/post-build.js",
    "verify-build": "node project/scripts/verify-build.js",
    "clean": "rimraf dist",
    "validate:all": "npm run validate:extensions && npm run validate:es2022 && npm run validate:jsdoc && npm run validate:hybrid",
    "validate:extensions": "node project/scripts/validate-extensions.mjs",
    "validate:es2022": "node project/scripts/validate-es2022.mjs",
    "validate:jsdoc": "node project/scripts/validate-jsdoc.mjs",
    "validate:hybrid": "node project/scripts/validate-hybrid.mjs",
    "validate:phase-1": "npm run validate:extensions && npm run validate:es2022",
    "validate:phase-2": "npm run validate:es2022 && npm run validate:jsdoc",
    "validate:phase-3": "npm run validate:es2022 && npm run validate:hybrid",
    "validate:phase-4": "npm run validate:es2022 && npm run validate:jsdoc",
    "validate:phase-5": "npm run validate:all && npm run build && npm run test:coverage"
  },
  "keywords": [
    "documentation",
    "git",
    "github",
    "development"
  ],
  "author": {
    "name": "Documental Team",
    "email": "team@documental.com"
  },
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@vitest/ui": "^4.0.6",
    "asar": "^3.2.0",
    "electron": "^38.2.0",
    "electron-builder": "^25.1.8",
    "jsdom": "^27.1.0",
    "vitest": "^4.0.6"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "call-bind": "^1.0.8",
    "call-bind-apply-helpers": "^1.0.2",
    "call-bound": "^1.0.4",
    "dunder-proto": "^1.0.1",
    "es-errors": "^1.3.0",
    "get-intrinsic": "^1.3.0",
    "get-proto": "^1.0.1",
    "gopd": "^1.0.1",
    "has-proto": "^1.0.3",
    "has-symbols": "^1.0.3",
    "isomorphic-git": "^1.34.0",
    "keytar": "^7.9.0",
    "sqlite3": "^5.1.7"
  },
  "build": {
    "appId": "com.documental.app",
    "productName": "Documental",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "src/**/*",
      "github-config.js",
      "package.json",
      "node_modules/**/*",
      "!node_modules/.cache/**",
      "!node_modules/.bin/**",
      "!node_modules/**/test/**",
      "!node_modules/**/tests/**",
      "!node_modules/**/example/**",
      "!node_modules/**/examples/**",
      "!node_modules/**/*.md",
      "!node_modules/**/*.txt",
      "!node_modules/**/CHANGELOG*",
      "!node_modules/**/LICENSE*",
      "!node_modules/**/README*"
    ],
    "asarUnpack": [
      "node_modules/call-bind-apply-helpers/**/*",
      "node_modules/es-errors/**/*",
      "node_modules/gopd/**/*",
      "node_modules/has-proto/**/*",
      "node_modules/has-symbols/**/*",
      "node_modules/call-bind/**/*",
      "node_modules/get-intrinsic/**/*",
      "node_modules/get-proto/**/*",
      "node_modules/dunder-proto/**/*",
      "node_modules/call-bound/**/*",
      "node_modules/sqlite3/**/*",
      "node_modules/keytar/**/*"
    ],
    "extraResources": [],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "snap",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Development",
      "desktop": {
        "Name": "Documental",
        "Comment": "Ambiente de documentação centralizado com integração Git",
        "Keywords": "documentation;git;github;development;"
      },
      "maintainer": "Documental Team <team@documental.com>"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "sign": false,
      "signDlls": false
    },
    "snap": {
      "plugs": [
        "default",
        "desktop",
        "desktop-legacy",
        "home",
        "x11",
        "unity7",
        "browser-support",
        "network",
        "gsettings",
        "audio-playback",
        "pulseaudio",
        "opengl"
      ]
    }
  }
}

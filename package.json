{
  "name": "app-git-electron",
  "version": "1.0.0",
  "description": "Ambiente de documentação centralizado com integração Git",
  "main": "main.js",
  "homepage": "https://github.com/documental/app-git-electron",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:linux:deb": "electron-builder --linux deb",
    "build:linux:dir": "electron-builder --linux dir",
    "build:linux:snap": "electron-builder --linux snap",
    "dist": "npm run build && node fix-modules.js",
    "build:fixed": "npm run build:linux:appimage && node fix-modules.js"
  },
  "keywords": ["documentation", "git", "github", "development"],
  "author": {
    "name": "Documental Team",
    "email": "team@documental.com"
  },
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^38.2.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "isomorphic-git": "^1.34.0",
    "keytar": "^7.9.0",
    "sqlite3": "^5.1.7"
  },
  "build": {
    "appId": "com.documental.app",
    "productName": "Documental",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "github-config.js",
      "node_modules/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/**/*"
    ],
    "extraResources": [],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "snap",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Development",
      "desktop": {
        "Name": "Documental",
        "Comment": "Ambiente de documentação centralizado com integração Git",
        "Keywords": "documentation;git;github;development;"
      },
      "maintainer": "Documental Team <team@documental.com>"
    },
    "snap": {
      "plugs": [
        "default",
        "desktop",
        "desktop-legacy",
        "home",
        "x11",
        "unity7",
        "browser-support",
        "network",
        "gsettings",
        "audio-playback",
        "pulseaudio",
        "opengl"
      ]
    }
  }
}
